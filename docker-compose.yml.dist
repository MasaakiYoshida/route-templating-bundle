version: '2'
services:
    app:
        container_name: "phpmentors.route-templating-bundle.app"
        image: "phpmentors/php-app:php55"
        volumes:
            - ".:/var/app"
        environment:
            TERM: "xterm"
            TZ: "Asia/Tokyo"
            LANG: "ja_JP.UTF-8"
            PHP_INI: "docker/php.ini"
            PHP_IDE_CONFIG: "serverName=docker"
